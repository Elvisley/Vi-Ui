$colors = {
  default: #94A2B0,
  primary: #3581BC,
  secondary: #1C415E,
  success: #28a478,
  warning: #DDC880,
  danger: #e45151,
  info: #1987C5,
  dark: #55636F,
  light: #FFFFFF,
}

$background-main = #fff
$text-color-main = rgba(0, 0, 0, 0.75)

$isDark = !(contrast($colors.light, $background-main).ratio < 3)
$textIsDark = contrast($colors.light, $text-color-main).ratio > 3

$link-color-main = $colors.primary
$border-color-main = $isDark ? rgba(255, 255, 255, 0.2) : rgba(0, 0, 0, 0.2);
$border-color-main-focus = $colors.primary
$input-background-main = $isDark ? $colors.dark : $colors.light
$block-background-main = $isDark ? rgba(255, 255, 255, 0.04) : rgba(0, 0, 0, 0.04);

for $key, $val in $colors
  $contrast-ratio-light = contrast($val, $colors.light).ratio
  $contrast-ratio-text = contrast($val, $text-color-main).ratio

  if $contrast-ratio-light > $contrast-ratio-text || $contrast-ratio-light > 3
    $text-color = $colors.light
    $link-color = $text-color
  else
    $text-color = $text-color-main
    $link-color = $link-color-main

  a.ViColor-{$key}
  .ViComponent.ViColor-{$key}
  .ViColor-{$key}
    &--background
      border-color $val
      background-color $val
      color $text-color

      a
        color $link-color
      a:focus
      a:hover
        color darken($link-color, 30%)

    &--border
      border-color $val
      background-color transparent
      color $val

    &--hover:focus:enabled
      box-shadow 0 0 10px rgba($val, 0.5)

    &--hover:hover:enabled
      box-shadow 0 0 0 rgba($val, 0)
      background-color shade($val, 20%)
      border-color shade($val, 25%)
      color $text-color
