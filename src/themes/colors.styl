$colors = {
  default: #94A2B0,
  defaultVariant: #55636F,
  primary: #24AEE4,
  primaryVariant: #1987C5,
  secondary: #1B415E,
  success: #5AC2A0,
  warning: #DDC880,
  danger: #E45B5B,
  light: #FFFFFF
}

for $key, $val in $colors
  $contrastRatio = contrast($val).ratio

  if $val == #FFFFFF
    $text-color = rgba(0, 0, 0, 0.75)
    $link-color = $colors.primary
  else if contrastRatio < 4
    $text-color = rgba(0, 0, 0, 0.85)
    $link-color = $colors.primary
  else if contrastRatio < 6
    $text-color = #FFFFFF
    $link-color = $text-color
  else
    $text-color = rgba(255, 255, 255, 0.9)
    $link-color = $text-color

  a.ViColor-{$key}
  .ViComponent.ViColor-{$key}
  .ViColor-{$key}
    &--background
      border-color $val
      background-color $val
      color $text-color

      a
        color $link-color
      a:focus
      a:hover
        color darken($link-color, 30%)

    &--border
      border-color $val
      background-color transparent
      color $val

    &--hover:focus:enabled
      box-shadow 0 0 10px rgba($val, 0.5)

    &--hover:hover:enabled
      box-shadow 0 0 0 rgba($val, 0)
      background-color shade($val, 20%)
      border-color shade($val, 25%)
      color $text-color
