$colors = {
  default: #94A2B0,
  primary: #1987C5,
  secondary: #1B415E,
  success: #5AC2A0,
  warning: #DDC880,
  danger: #E45B5B,
  info: #24AEE4,
  dark: #55636F,
  light: #fff
}

for $key, $val in $colors
  $contrastRatio = contrast($val).ratio

  if $val == white
    $text-color = #333
  else if contrastRatio < 4
    $text-color = rgba(0, 0, 0, 0.85)
  else if contrastRatio < 6
    $text-color = white
  else
    $text-color = rgba(255, 255, 255, 0.9)

  .ViColor-{$key}
    &--background
      border-color $val
      background-color $val
      color $text-color

    &--border
      border-color $val
      background-color transparent
      color $val

    &--hover:focus:enabled
      box-shadow 0 0 10px rgba($val, 0.5)

    &--hover:hover:enabled
      box-shadow 0 0 0 rgba($val, 0)
      background-color shade($val, 20%)
      border-color shade($val, 25%)
      color $text-color
