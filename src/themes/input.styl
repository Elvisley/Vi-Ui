$border-radius = 0.3em

.ViComponent.ViInput
  position relative
  z-index 0
  &.flexWraper:not(.flexWraper--vertical)
    align-items center

  .contentWrapper.ViInput__Input
    border 1px solid $border-color-main
    background $input-background-main
    border-radius $border-radius
    min-height 40px
    padding 0.6em
    outline none
    text-overflow ellipsis

    &:focus:not([readonly])
      border 1px solid $border-color-main-focus
      border-radius $border-radius
      box-shadow 0 0 0 0.2em rgba($border-color-main-focus, 0.7)
      position relative
      z-index: 1

    &--invalid
    &--validated:invalid
      border 1px solid $danger
      box-shadow inset 0 -0.3em 0.35em rgba($danger, 0.05)
      outline none

  & > .ViInput_Wrapper
    align-items stretch

    .contentWrapper
      border-radius 0

      &:first-child
        border-bottom-left-radius $border-radius
        border-top-left-radius $border-radius

      &:last-child
        border-bottom-right-radius $border-radius
        border-top-right-radius $border-radius

      &.ViInput__Input
        width 100%

      &.ViButton
        white-space nowrap

      &.ViInput__Slot
        background rgba($border-color-main, 0.1)
        border 1px solid $border-color-main
        display flex
        align-items center
        padding 0.6em
        &--prefix
          border-right 0
        &--suffix
          border-left 0
