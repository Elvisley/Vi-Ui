@import '../themes/fonts.css'
@import '../themes/colors'

$Roboto = 'Roboto', 'RobotoFallback', Arial, sans-serif

/*! Based on normalize.css v8.0.0 | MIT License | github.com/necolas/normalize.css */
/*! Also some snippets from bootstrap: https://github.com/twbs/bootstrap/blob/v4-dev/dist/css/bootstrap.css */

[hidden]
  display none

::-webkit-file-upload-button
  -webkit-appearance button
  font inherit

.sr-only
  position absolute
  width 1px
  height 1px
  padding 0
  overflow hidden
  clip rect(0, 0, 0, 0)
  white-space nowrap
  border 0

.sr-only-focusable:active, .sr-only-focusable:focus
  position static
  width auto
  height auto
  overflow visible
  clip auto
  white-space normal

.ViComponent
  box-sizing border-box
  font-family $Roboto
  font-weight 300
  line-height: 1.15em;
  -webkit-text-size-adjust 100%

  *
  *:before
  *:after
    box-sizing inherit

  a
    text-decoration underline
    background-color transparent
    color $link-color

  b,
  strong
    font-weight: bolder

  h1
  h2
  h3
  h4
  h5
  h6
  p
  hr
    font-weight 300
    margin 0 0 0.67em
    color inherit

  h1
    font-size 2.2em
  h2
    font-size 1.8em
  h3
    font-size 1.4em
  h4
    font-size 1.2em
  h5
    font-size 1.1em
  h6
    font-size 1em

  small
    font-size 80%

  hr
    border none
    border-top 1px solid rgba($text-color-main, 0.15)
    margin 0 0 1em

  img
    border-style none

  abbr[title]
    border-bottom none
    text-decoration underline
    text-decoration underline dotted

  code
    background $block-background-main

  pre
  code
  kbd
  samp
    font-family monospace
    font-size 1em

  pre
    code
      display block
      padding 0.5em 0.9em

  sub
  sup
    font-size 75%
    line-height 0
    position relative
    vertical-align baseline

  sub
    bottom -0.25em

  sup
    top -0.5em

  details
    display block

  summary
    display list-item

  textarea
    overflow auto

  fieldset
    border 0
    padding 0
    margin 0 0 2.4em
    &:last-child
      margin 0
    legend
      border-bottom $link-color-main 2px solid
      font-size 1.1em
      margin 0 0 1em
      padding 0 0 0.3em
      text-transform uppercase

  button
  input
  optgroup
  select
  textarea
    font-family inherit
    font-size 100%
    line-height 1.15em
    margin 0

  button
  input
    overflow visible

  button
  select
    text-transform none

  button
  [type="button"]
  [type="reset"]
  [type="submit"]
    -webkit-appearance button

  button::-moz-focus-inner
  [type="button"]::-moz-focus-inner
  [type="reset"]::-moz-focus-inner
  [type="submit"]::-moz-focus-inner
    border-style none
    padding 0

  button:-moz-focusring
  [type="button"]:-moz-focusring
  [type="reset"]:-moz-focusring
  [type="submit"]:-moz-focusring
    outline: 1px dotted ButtonText

  [type="checkbox"]
  [type="radio"]
    box-sizing border-box
    padding 0

  [type="number"]::-webkit-inner-spin-button
  [type="number"]::-webkit-outer-spin-button
    height auto

  [type="search"]
    -webkit-appearance textfield
    outline-offset -2px

  [type="search"]::-webkit-search-decoration
    -webkit-appearance none
